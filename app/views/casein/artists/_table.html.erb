<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Full name", :full_name %></th>
			<th><%= casein_sort_link "Short name", :short_name %></th>
			<th><%= casein_sort_link "Image cloud", :image_cloud %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% artists.each do |artist| %>
		<tr>
			<td><%= casein_table_cell_link artist.full_name, casein_artist_path(artist) %></td>
			<td><%= casein_table_cell_link artist.short_name, casein_artist_path(artist) %></td>
			<td><%= casein_table_cell_link artist.image_cloud, casein_artist_path(artist) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_artist_path(artist), :method => :delete, :data => { :confirm => "Are you sure you want to delete this artist?" }) %>
			</td>
		</tr>
	<% end %>
</table>