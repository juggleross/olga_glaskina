			<td><%= casein_table_cell_link project.artwork_id, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link project.global_name, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link project.photo_name, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link project.image_cloud, casein_project_path(project) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_project_path(project), :method => :delete, :data => { :confirm => "Are you sure you want to delete this project?" }) %>
